{
  "name": "@cdoublev/react-utils",
  "description": "Common React hooks and components to use in a React application",
  "author": "Guillaume Lebas",
  "license": "MIT",
  "keywords": [
    "react",
    "react-hooks"
  ],
  "version": "0.5.2",
  "homepage": "https://github.com/creativewave/react-utils",
  "bugs": "https://github.com/creativewave/react-utils/issues",
  "repository": "github:creativewave/react-utils",
  "directories": {
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "unpkg": "dist/umd/react-utils.min.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:cjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:cjs": "BABEL_ENV=cjs babel src -d dist/cjs",
    "build:es": "BABEL_ENV=es babel src -d dist/es",
    "build:umd": "webpack -d src/index.js -o dist/umd/react-utils.js",
    "build:umd:min": "webpack -p src/index.js -o dist/umd/react-utils.min.js",
    "lint": "eslint src __tests__",
    "safe-publish": "npm run lint && npm run test && npm run build && npm publish",
    "test": "jest",
    "test:report": "jest -i --reporters='jest-junit'",
    "test:watch": "jest --watchAll -b"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@cdoublev/eslint-config": "^0.2.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.4.1",
    "eslint": "^6.6.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "peerDependencies": {
    "@cdoublev/animate": "^0.1.0",
    "react": "^16.7.0-alpha.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": {
    "production": [
      "last 2 versions",
      "not ie <= 11"
    ],
    "development": [
      "last 1 Chrome version"
    ]
  }
}
